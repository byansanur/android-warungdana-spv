<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Konsumen"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/motor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suzuki Hayate 2011"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Dec 2018"
                android:textAlignment="textEnd"
                android:textColor="?attr/textColor"
                android:textSize="14sp" />



        </LinearLayout>

    </LinearLayout>





    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

<!--    <Spinner-->
<!--        android:id="@+id/spinnerReason"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Pinjaman"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/otr"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OTR Isian"
            android:textSize="16sp"
            android:editable="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/plafond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Plafond"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:inputType="number"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DP"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            tools:ignore="TextViewEdits" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/angsuran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Angsuran"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            tools:ignore="TextViewEdits"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">


        <EditText
            android:id="@+id/tenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tenor"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            tools:ignore="TextViewEdits"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/enambelas_dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/enambelas_dp">
            <ImageView
                android:id="@+id/btnDetail"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_btn_solid"
                android:text="Detail" />

            <TextView
                android:id="@+id/detailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Detail"
                android:layout_marginStart="10dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnEditRelative"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/enambelas_dp">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_height="48dp"
                android:layout_width="160dp"
                android:background="@drawable/bg_btn_stroke"
                android:text="Detail" />

            <TextView
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Edit"
                android:layout_marginStart="10dp"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>