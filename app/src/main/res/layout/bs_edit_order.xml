<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/enambelas_dp"
            android:padding="@dimen/enambelas_dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/enambelas_dp"
                android:text="Edit Order Fund"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#525252"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nama Konsumen"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12 Dec 2018"
                    android:textAlignment="textEnd"
                    android:textColor="?attr/textColor"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/motor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Suzuki Hayate 2011"
                    android:textColor="#000"
                    android:textSize="12sp" />
                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <View
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otr"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editOtr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Otr"
                    android:background="@android:color/transparent"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    android:layout_marginBottom="8dp"
                    android:editable="false"
                    tools:ignore="TextViewEdits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plafond"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editPlafond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plafond"
                    android:background="@android:color/transparent"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    android:layout_marginBottom="8dp"
                    android:inputType="number"
                    tools:ignore="TextViewEdits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down payment"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editDp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Down Payment"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="8dp"
                    tools:ignore="TextViewEdits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Installement"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editCicilan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Installement"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="8dp"
                    tools:ignore="TextViewEdits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tenor"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editTenor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tenor"
                    android:textColor="?attr/textColor"
                    android:textColorHint="?attr/textColor"
                    android:inputType="number"
                    tools:ignore="TextViewEdits"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_marginTop="@dimen/enambelas_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update data"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="?attr/textColorToolbar"
                    android:background="@drawable/bg_btn"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</FrameLayout>