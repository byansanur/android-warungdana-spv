<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/cardBackground"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layoutItemCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_toStartOf="@+id/kotakLaknat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imgbox">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvItemNamaDepan"
                    android:textSize="16sp"
                    android:textColor="?attr/textColor"
                    android:text="First Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMerekType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merek Type"
                android:textColor="?attr/textColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kotakLaknat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true">


            <TextView
                android:id="@+id/tvItemStatus"
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="?attr/textColor"/>

            <TextView
                android:id="@+id/tvItemTanggal"
                android:textColor="?attr/textColor"
                android:text="Created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginTop="3dp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
